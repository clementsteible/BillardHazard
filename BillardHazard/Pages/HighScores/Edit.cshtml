@page
@model BillardHazard.Pages.HighScores.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>HighScore</h4>
<hr />
<div class="row  bg-light text-black justify-content-center align-content-center">
    <div class="col-md-4">
        <form name="edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HighScore.Id" />
            <div class="form-group">
                <label asp-for="HighScore.TeamName" class="control-label"></label>
                <input asp-for="HighScore.TeamName" class="form-control" />
                <span asp-validation-for="HighScore.TeamName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HighScore.Score" class="control-label"></label>
                <input asp-for="HighScore.Score" class="form-control" />
                <span asp-validation-for="HighScore.Score" class="text-danger"></span>
            </div>
            <input type="submit" value="Save" class="btn btn-success" />
        </form>
        <a asp-page="./Index">
            <button class="btn btn-dark">Back to List</button>
        </a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
