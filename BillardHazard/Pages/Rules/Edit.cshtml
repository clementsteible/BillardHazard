@page
@model BillardHazard.Pages.Rules.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Rule</h4>
<hr />
<div class="row bg-light text-black justify-content-center align-content-center">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Rule.Id" />
            <div class="form-group">
                <label asp-for="Rule.Explanation" class="control-label"></label>
                <input asp-for="Rule.Explanation" class="form-control" />
                <span asp-validation-for="Rule.Explanation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rule.Points" class="control-label"></label>
                <input asp-for="Rule.Points" class="form-control" />
                <span asp-validation-for="Rule.Points" class="text-danger"></span>
            </div>
            <input type="submit" value="Save" class="btn btn-success" />
        </form>
        <a asp-page="./Index">
            <button class="btn btn-dark">Back to List</button>
        </a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
