@page
@model BillardHazard.Pages.Rules.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Rule</h4>
<hr />
<div class="row justify-content-center align-content-center">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Rule.Explanation" class="control-label"></label>
                <input asp-for="Rule.Explanation" class="form-control" />
                <span asp-validation-for="Rule.Explanation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rule.Points" class="control-label"></label>
                <input asp-for="Rule.Points" class="form-control" />
                <span asp-validation-for="Rule.Points" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">
        <button class="btn btn-dark">Back to List</button>
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
